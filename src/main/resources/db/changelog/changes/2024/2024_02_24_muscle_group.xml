<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20240224-01" author="admin">

        <createTable tableName="muscle_group">
            <column name="group_id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="group_name" type="varchar(255)">
                <constraints unique="true"/>
            </column>
        </createTable>

        <createSequence
                sequenceName="muscle_group_seq"
                startValue="1"
                incrementBy="50"
        />

        <createTable tableName="exercise">
            <column name="exercise_id" type="integer">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="exercise_name" type="varchar">
                <constraints unique="true"/>
            </column>
            <column name="training_type" type="varchar(255)"/>
        </createTable>

        <createTable tableName="exercise_muscle_groups">
            <column name="group_id" type="integer"/>
            <column name="exercise_id" type="integer"/>
        </createTable>

        <createSequence
                sequenceName="exercise_seq"
                startValue="1"
                incrementBy="50"
        />

       <addForeignKeyConstraint
               constraintName="fk_exercise_muscle_groups_group_id_muscle_group_group_id"
               baseTableName="exercise_muscle_groups"
               baseColumnNames="group_id"
               referencedTableName="muscle_group"
               referencedColumnNames="group_id"
       />

        <addForeignKeyConstraint
                constraintName="fk_exercise_muscle_groups_exercise_id_exercise_exercise_id"
                baseTableName="exercise_muscle_groups"
                baseColumnNames="exercise_id"
                referencedTableName="exercise"
                referencedColumnNames="exercise_id"
        />

    </changeSet>
</databaseChangeLog>